@model Pizza


<div>
    <div class="card my-4">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.Img" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body d-flex flex-column h-100 ">
                    <div class="ms-auto mb-3"><a class="text-danger" asp-controller="Home" asp-action="Menu"><i class="fa-solid fa-circle-xmark"></i></a></div>
                    <div class="flex-grow-1">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text">@Model.Descrition</p>
                    </div>
                    <div class="ms-auto pillow"><p class="card-text">Prezzo: @Model.Amount.ToString("C")</p></div>



                </div>
            </div>
        </div>
    </div>
</div>

