@model List<Pizza>

<div> 
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
        @if(Model.Count >0 ){
            @foreach (Pizza pizza in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@pizza.Img" class="card-img-top" alt="...">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@pizza.Name</h5>
                            <p class="card-text flex-grow-1">@pizza.Descrition</p>
                            <div class="d-flex justify-content-between">
                                <div class="card-button">
                                    <a class="btn-square" asp-area="" asp-controller="Home" asp-action="Details">i</a>
                                </div>
                                <p class="card-text">@pizza.Amount.ToString("C")</p>
                            </div>

                        </div>
                    </div>
                </div>
            }
        }else{
            <p>Non ci sono pizze nella lista</p>
        }
    </div>
</div>

